<h1 class = "headline">Books</h1>

<table>
  <thead>
  	<tr>
  	  <th class="table-title">Title</th>
  	  <th class="table-body">Body</th>
  	  <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
	<% @books.each do |book| %>
	  <tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
        <td><%= link_to 'Show',book_path(book), class: 'link' %></td>
		<td><%= link_to 'Edit',book_path(book), class: 'link' %></td>
		<td><%= link_to 'Destroy', book_path(book), method: :delete, "data-confirm" => "Are You Sure?", class: 'link' %></td>
	  </tr>
	<% end %>
  </tbody>
</table>

<h3 class="new-book">New book</h3>
  <%= form_for(@book) do |f| %>

  <% if @book.errors.any? %>
      <div class="error-message-box">
        <p class="error-message"><%= @book.errors.count %>errors prohibited this book from being saved:</p>
        <ul class="error-detail">
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <p class="form-title">Title</p>
    <%= f.text_field :title %>
    <p class="form-body">body</p>
    <%= f.text_area :body %>
    <div>
      <%= f.submit 'Create Book', class: 'submit' %>
    </div>
  <% end %>